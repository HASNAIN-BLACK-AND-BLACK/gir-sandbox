<script>
  $( document ).ready(function() {
        jQuery.extend( jQuery.fn, {
          within: function( pSelector ) {
              return this.filter(function(){
                  return $(this).closest( pSelector ).length;
              });
          }
        });


    function addfilterButton(){
    $('#snize_results').find('.snize-horizontal-right .snize-main-panel-view-mode').after(defaultOptions.filterHtml)
    }

    function implementDesigne()
    {
      let searchProductLength = SearchedProducts.length ;
      console.log($('#snize_results').has('.afterfiltercontaner').within(".snize-main-panel-view-mode").length)
      if(!searchProductLength)
      {
      } else {
        clearInterval(findproductinterval);
       addfilterButton()
        $('#searchresultcount').text(searchProductLength)
      }
       console.log($('#snize_results').has('.afterfiltercontaner').length)
    }


    let defaultOptions =  {
       filterHtml:  `<div class="afterfiltercontaner"><a href="#" class="appfiltertoggle"><svg width="24" height="32"  class="icon icon-filter" aria-hidden="true" focusable="false" role="presentation" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="none"> <path fill-rule="evenodd" d="M4.833 6.5a1.667 1.667 0 1 1 3.334 0 1.667 1.667 0 0 1-3.334 0ZM4.05 7H2.5a.5.5 0 0 1 0-1h1.55a2.5 2.5 0 0 1 4.9 0h8.55a.5.5 0 0 1 0 1H8.95a2.5 2.5 0 0 1-4.9 0Zm11.117 6.5a1.667 1.667 0 1 0-3.334 0 1.667 1.667 0 0 0 3.334 0ZM13.5 11a2.5 2.5 0 0 1 2.45 2h1.55a.5.5 0 0 1 0 1h-1.55a2.5 2.5 0 0 1-4.9 0H2.5a.5.5 0 0 1 0-1h8.55a2.5 2.5 0 0 1 2.45-2Z" fill="currentColor"></path></svg></a></div>`
    }
    $('.seaction-featured-collection').hide();
    $('.sectionfeatured-blog').hide();
    let SearchedProducts = [] ;
    const elementToObserve = document.querySelector("body");
    const observer = new MutationObserver((changes) => {

      changes.forEach(function(change) {


        if($(change.target).find(".snize-search-results-content").length > 0 && $(change.target).within(".snize-search-results-main-content").length > 0)
        {
          console.log('change.target',change.target)
          SearchedProducts = [];
          $(change.target).find(".snize-product").each((index, item) => {
            let image = $(item).find(".snize-thumbnail img").attr("src");
            let title = $(item).find(".snize-title").text();
            let price = $(item).find(".snize-price-list .snize-price").text();
            let link = $(item).find("a.snize-view-link").attr('href');
            let available = $(item).find(".snize-out-of-stock").text();

            let singleProduct = {
              image,
              title,
              price,
              link,
              available,
            };
            SearchedProducts.push(singleProduct);
           
          });

          setTimeout(()=>{

          if($('#snize_results').has('.afterfiltercontaner').length == 0)
          {
            addfilterButton()
          }

          },500)

          

        }
    });
   
    this.SearchedProducts = SearchedProducts
    });


  let findproductinterval = setInterval(implementDesigne,500)

    observer.observe(elementToObserve, { attributes: true, childList: true, subtree: true  });


$(document).on('click','.appfiltertoggle',function(e){
    e.preventDefault();
    $('#snize_results .snize-filters-sidebar.snize-product-filters').toggleClass('filter_open')

})


});
</script>



    --font-size-heading-2-mobile: 3.5rem;
    --line-height-heading-2-desktop: 6.75rem;
    --line-height-heading-2-mobile: 4.72rem;

    --font-size-heading-3-desktop: 2.4rem;
    --font-size-heading-3-mobile: 1.6rem;
    --line-height-heading-3-desktop: 4.0rem;
    --line-height-heading-3-mobile: 3.0rem;

    --font-size-heading-4-desktop: 1.6rem;
    --font-size-heading-4-mobile: 1.4rem;
    --line-height-heading-4-desktop: 2.6rem;
    --line-height-heading-4-mobile: 2.6rem;
   
    /**
    --font-size-heading-5-desktop: 2.2rem;
    --font-size-heading-5-mobile: 2.2rem;
    --line-height-heading-5-desktop: 3.2rem;
    --line-height-heading-5-mobile: 3.0rem;
    
    --font-size-heading-6-desktop: 1.6rem;
    --font-size-heading-6-mobile: 1.4rem;
    --line-height-heading-6-desktop: 2.64rem;
    --line-height-heading-6-mobile: 2.3rem;
   

    
    --font-size-text-body-large-desktop: 1.4rem;
    --font-size-text-body-large-mobile: 1.4rem;
    --line-height-text-body-large-desktop: 2.2rem;
    --line-height-text-body-large-mobile: 2.2rem;
    **/

    --font-size-text-body-desktop: 1.4rem;
    --font-size-text-body-mobile: 1.4rem;
    --line-height-text-body-desktop: 2.2rem;
    --line-height-text-body-mobile: 2.2rem;
    
    --font-size-text-body-small-desktop: 1.2rem;
    --font-size-text-body-small-mobile: 1.2rem;
    --line-height-text-body-small-desktop: 2.0rem;
    --line-height-text-body-small-mobile: 2.0rem;

    --font-size-text-fields-desktop: 1.4rem;
    --font-size-text-fields-mobile: 1.6rem;
    --line-height-text-fields-desktop: 2.2rem;
    --line-height-text-fields-mobile: 2.4rem;
    
    --font-size-text-legal-desktop: 1.2rem;
    --font-size-text-legal-mobile: 1.2rem;
    --line-height-text-legal-desktop: 1.8rem;
    --line-height-text-legal-mobile: 1.8rem;
    
    --font-size-text-mono-small-desktop: 1.1rem;
    --font-size-text-mono-small-mobile: 1.1rem;
    --line-height-text-mono-small-desktop: 1.8rem;
    --line-height-text-mono-small-mobile: 1.8rem;


    /* Font Assignment */

    --font-heading-family: 'Chalet-NY';
    --font-heading-style: normal;
    --font-heading-weight: 500;
    --font-heading-letter-spacing: 0.5px;
    --font-heading-line-height: var(--line-height-heading-1-desktop);
    --font-heading-size: var(--font-size-heading-1-desktop);


    --font-heading-family-2: 'CutiveMono-Regular';
    --font-heading-style-2: normal;
    --font-heading-weight-2: 400;
    --font-heading-letter-spacing-2: 0.2em;
    --font-heading-line-height-2: var(--line-height-heading-3-desktop);
    --font-heading-size-2: var(--font-size-heading-3-desktop);

    --font-text-family: 'CutiveMono-Regular';
    --font-text-style: normal;
    --font-text-weight: 400;
    --font-text-letter-spacing: normal;
    --font-text-line-height: var(--line-height-text-body-desktop);
    --font-text-size: var(--font-size-text-body-desktop);

    --font-button-family: 'FormulaCondensed-Black';
    --font-button-style: normal;
    --font-button-weight: 400;
    --font-button-letter-spacing: normal;
    --font-button-line-height: var(--line-height-heading-7-desktop);;
    --font-button-size: var(--font-size-heading-7-desktop);


    /* Color Declaration */
    --color-black: #000;
	--color-dark-grey: #393435;
    --color-grey-1: #7E7A78;
    --color-grey-2: #9D9C9B;
    --color-white: #fff;
    --color-beige: #F6EBD8;
	--color-yellow: #F2A900;
	--color-blue: #1E4294;
	--color-red: #B5170D;
	--color-green: #9DBA4A;
	--color-focus-green: #9DBA4A;

    --gradient-backdrop-bottom: linear-gradient(0deg, rgba(0, 0, 0, 0.3) 0%, rgba(0, 0, 0, 0) 100%); 

    
    /* Color Assignment */

	--color-focus: var(--color-focus-green);
    --color-shadow: var(--color-black);
    --color-error: var(--color-red);

    --color-foreground: var(--color-black);
    --color-background: var(--color-white);

    --alpha-header-background: 1;

    --color-button-text: var(--color-black);
    --color-button-background: var(--color-white);
    --color-button-border: var(--color-black);
    --alpha-button-background: 1;
    --alpha-button-border: 1;

    --color-dropdown-text: var(--color-black);
    --color-dropdown-background: var(--color-white);
    --color-dropdown-border: var(--color-grey-1);
    --color-dropdown-toggle-border: var(--color-grey-2);
    --color-dropdown-item-border: var(--color-grey-4);
    --alpha-dropdown-background: 1;
    --alpha-dropdown-border: 1;

    --color-input-checkbox-background: var(--color-grey-4);
    --color-input-checkbox-border: var(--color-black);
    --color-input-checkbox-tick: var(--color-white);
    --alpha-input-checkbox-background: 1;
    --alpha-input-checkbox-border: 0;

    --color-input-radio-background: var(--color-grey-4);
    --color-input-radio-border: var(--color-black);
    --color-input-radio-tick: var(--color-black);
    --alpha-input-radio-background: 1;
    --alpha-input-radio-border: 0;

    --color-input-text: var(--color-black);
    --color-input-background: var(--color-white);
    --color-input-border: var(--color-grey-2);
    --color-input-label: var(--color-grey-2);
    --alpha-input-background: 1;
    --alpha-input-border: 1;

    --color-header-text: var(--color-black);
    --color-header-background: var(--color-white);
    --alpha-header-background: 1;

    --color-badge-background: var(--color-black);
    --color-badge-border: var(--color-white);
    --alpha-badge-border: .1;

    --color-card-hover: var(--color-black);



    /* Duration */

    --duration-short: 100ms;
    --duration-default: 200ms;
    --duration-long: 500ms;


    /* Boder, Shadow */

    --media-border-width: 1px;
    --media-border-radius: 0px;
    --media-border-opacity: 0.05;
    --media-shadow-horizontal-offset: 0px;
    --media-shadow-vertical-offset: 4px;
    --media-shadow-blur-radius: 5px;
    --media-shadow-opacity: 0.0;
    --media-padding: 0px;

    --card-border-width: 0px;
    --card-border-radius: 0px;
    --card-border-opacity: 0.1;
    --card-shadow-horizontal-offset: 0px;
    --card-shadow-vertical-offset: 4px;
    --card-shadow-blur-radius: 5px;
    --card-shadow-opacity: 0.0;
    --card-image-padding: 0.0rem;
    
    --badge-border-radius: 40px;

    --popup-border-width: 1px;
    --popup-border-radius: 0px;
    --popup-border-opacity: 0.1;
    --popup-shadow-horizontal-offset: 0px;
    --popup-shadow-vertical-offset: 4px;
    --popup-shadow-blur-radius: 5px;
    --popup-shadow-opacity: 0.0;

    --drawer-border-width: 1px;
    --drawer-border-opacity: 0.1;
    --drawer-shadow-horizontal-offset: 0px;
    --drawer-shadow-vertical-offset: 4px;
    --drawer-shadow-blur-radius: 5px;
    --drawer-shadow-opacity: 0.0;

    --text-boxes-border-width: 0px;
    --text-boxes-border-radius: 0px;
    --text-boxes-border-opacity: 0.1;
    --text-boxes-shadow-horizontal-offset: 0px;
    --text-boxes-shadow-vertical-offset: 4px;
    --text-boxes-shadow-blur-radius: 5px;
    --text-boxes-shadow-opacity: 0.0;

    --buttons-border-width: 1px;
    --buttons-border-offset: 0px;
    --buttons-border-radius: 5px;
    --buttons-border-radius-outset: 5px;
    --buttons-border-opacity: 1;
    --buttons-shadow-horizontal-offset: 0px;
    --buttons-shadow-vertical-offset: 0px;
    --buttons-shadow-blur-radius: 0px;
    --buttons-shadow-opacity: 0.0;

    --inputs-border-width: 1px;
    --inputs-border-radius: 5px;
    --inputs-border-opacity: 0.55;
    --inputs-shadow-horizontal-offset: 0px;
    --inputs-shadow-vertical-offset: 4px;
    --inputs-shadow-blur-radius: 5px;
    --inputs-shadow-opacity: 0.0;
    --inputs-margin-offset: 0px;


    --dropdown-border-style: solid;
    --dropdown-border-width: 1px;
    --dropdown-border-radius: 5px;
    --dropdown-border-opacity: 0.55;

    --variant-pills-border-width: 1px;
    --variant-pills-border-radius: 40px;
    --variant-pills-border-opacity: 0.55;
    --variant-pills-shadow-horizontal-offset: 0px;
    --variant-pills-shadow-vertical-offset: 4px;
    --variant-pills-shadow-blur-radius: 5px;
    --variant-pills-shadow-opacity: 0.0;

    /* Geometry */

    --header-top-position: 38px; /* default value, live updating through js */
    --header-height: 111px; /* default value, live updating through js */
    --pdp-dock-height: 112px; /* default value, live updating through js */

    --header-bottom-position: calc(var(--header-top-position) + var(--header-height));

    --anchor-target-offset: var(--header-bottom-position);


    /* Z-Index */
    
    --z-index-header: 100;
    --z-index-header-drawer: 300;
    --z-index-cart-drawer: 400;
    --z-index-modal: 500;

    /* Viewport Unit */
    --viewport-height: 100vh;
    
    --vh-unit: var(--vh, 1vh);
    --vh-100: calc(var(--vh-unit) * 100);
    
}


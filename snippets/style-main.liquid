:root {

    /* Font Declaration */

    --font-size-heading-1-desktop: 6.5rem;
    --font-size-heading-1-mobile: 5.0rem;
    --line-height-heading-1-desktop: 8.12rem;
    --line-height-heading-1-mobile: 6.75rem;
    
